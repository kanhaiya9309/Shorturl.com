<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Url Shortner</title>
    <style>
        #btn{
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Url Shortner</h1>
    <form action="shortUrl" method="post" class="my-4" form-inline>
        <label  for="fullUrl" class= "sr-only sr-only-focusable"></label>
        <input type="text"  required placeholder="URL" name="fullUrl" id="fullUrl" class="form-control  mr-2"/>
        <button type="submit"  class="btn btn-success"  id="btn">Submit</button>
    </form>

    <table  class="table table-striped table-responsive" >
        <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Click Count</th>
        </tr>
        <% shortUrls.forEach(shortUrl => { %>
         <tr>
         <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
        <td><%= shortUrl.clicks %></td>
       </tr>
       <% }); %>

      </table>
    </div>
    
</body>
</html>